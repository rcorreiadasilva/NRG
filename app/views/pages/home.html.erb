<div class="container">

  <div class="row mb-5 mt-3">
     <!--     HOME PAGE IF USER LOGGED IN -->
    <% if user_signed_in? %>

    <h1>Hello <%= @user %>    </h1>
  </div>

  <div class="row">


    <!-- APARTMENTS -->
    <div class="col-6">
      <div class="card-product">
        <img src="https://images.unsplash.com/photo-1523192193543-6e7296d960e4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" />
        <div class="card-product-infos">
           <h3><%= link_to 'Apartments', apartments_path %> </h3>
        </div>
      </div>
    </div>


    <!-- CONSUMPTIONS -->
    <div class="col-6">
      <div class="card-product">
        <img src="https://images.unsplash.com/photo-1526948531399-320e7e40f0ca?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" />
        <div class="card-product-infos">
           <h3><%#= link_to 'Tenants', apartment_tenants_path %> </h3>
        </div>
      </div>
     </div>


<!--     HOME PAGE IF USER LOGGED OFF -->
    <% else %>
      <%= render 'shared/homepage' %>
    <% end %>


  </div>

</div>



